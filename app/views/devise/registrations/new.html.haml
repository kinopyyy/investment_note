
.login_background
  .login_background__top_box
  .login_background__login_main
    .login_background__login_main__box
      .login_background__login_main__box__login_header
        =link_to root_path do
          =image_tag "material/image4.png", width: "130px"

      .login_background__login_main__box__text
        新規登録

      %br 
      %br  

      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource

        .field
          = f.label :ニックネーム
          %br/
          = f.text_field :nickname, autofocus: true, placeholder: "ニックネーム", class: "field_box"

        %br/
        .field
          = f.label :メールアドレス
          %br/
          = f.email_field :email, autofocus: true, placeholder: "xxx@ppp.com", autocomplete: "email", class: "field_box"

        %br/  
        .field
          = f.label :パスワード
          - if @minimum_password_length
            %em
              (#{@minimum_password_length}文字以上)
          %br/
          = f.password_field :password, autocomplete: "new-password", class: "field_box"

        %br/  
        .field
          = f.label :パスワード（確認用）
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", class: "field_box"

        %br/
        .actions
          = f.submit "新規登録" , class: "next_button"

        %br 
        %br  

        = render "devise/shared/links"


  .wrapper
    = render 'posts/footer'