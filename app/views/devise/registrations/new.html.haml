
.login_main_box
  .login_header
    =link_to root_path do
      =image_tag "material/image4.png", class: "header__image" 


.login_main_box
  .login_main_box__text
    新規登録

  %br 
  %br  

  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource

    .field
      = f.label :ニックネーム
      %br/
      = f.text_field :nickname, autofocus: true, placeholder: "ニックネーム"

    %br/
    .field
      = f.label :メールアドレス
      %br/
      = f.email_field :email, autofocus: true, placeholder: "xxx@ppp.com", autocomplete: "email"

    %br/  
    .field
      = f.label :パスワード
      - if @minimum_password_length
        %em
          (#{@minimum_password_length}文字以上)
      %br/
      = f.password_field :password, autocomplete: "new-password"

    %br/  
    .field
      = f.label :パスワード（確認用）
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password"

    %br/
    .actions
      = f.submit "新規登録"

  %br 
  %br  

  = render "devise/shared/links"
